<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.saravanan.myappportfolio.AppsListActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mynanodegree"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/textColor"
        android:id="@+id/tvNanogegree" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/app1"
        android:id="@+id/btnPopularMovies"
        android:layout_below="@+id/tvNanogegree"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/app2"
        android:id="@+id/btnStockhawk"
        android:layout_below="@+id/btnPopularMovies"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/app3"
        android:id="@+id/btnBuildItBigger"
        android:layout_below="@+id/btnStockhawk"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/app4"
        android:id="@+id/btnMakeAppBigger"
        android:layout_below="@+id/btnBuildItBigger"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/app5"
        android:id="@+id/btnGoUbiquitous"
        android:layout_below="@+id/btnMakeAppBigger"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/app6"
        android:id="@+id/btnCapstone"
        android:layout_below="@+id/btnGoUbiquitous"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
